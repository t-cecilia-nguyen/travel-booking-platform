@model Hotel

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-header">
        <h4>Hotel</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Location)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Location)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StarRate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StarRate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NumberOfRooms)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumberOfRooms)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>       
        </dl>
    </div>
</div>
<div>
    
        <a asp-action="Index"class="btn btn-warning">Back to Hotels</a>


    <a class="btn btn-primary" asp-controller="HotelBooking" asp-action="CreateBooking" asp-route-name="@Model?.Name" asp-route-hotelId="@Model?.HotelId">Book Hotel</a>
       
    
</div>

<div id="hotelReviews">
    <h3>Reviews</h3>
    <div id="hotelReviewsList">
        <p>review here</p>
        <!-- Reviews will be loaded here using AJAX -->
    </div>
    <form id="addHotelReviewForm" class="mt-3">
        <input type="hidden" name="HotelId" value="@Model.HotelId" />
        <div class="form-group">
            <textarea name="Content" class="form-control" placeholder="Add a review..."></textarea>
        </div>
        <button type="submit" class="btn btn-success">Post Review</button>
    </form>
</div>

@section Scripts {
    <script src="~/js/hotelReviews.js"></script>
    <script>
        $(document).ready(function () {
            var hotelId = $('#hotelReviews input[name="HotelId"]').val();
            loadhotelReviews(hotelId);
        });
    </script>
}

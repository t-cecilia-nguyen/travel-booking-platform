@model Flight

<div class="card">
    <div class="card-header">
        <h5>Book Flight</h5>
    </div>
    <div class="card-body">
        <p><strong>Flight Number:</strong> @Model.FlightNumber</p>
        <p><strong>Airline:</strong> @Model.Airline</p>
        <p><strong>Origin:</strong> @Model.Origin</p>
        <p><strong>Destination:</strong> @Model.Destination</p>
        <p><strong>Departure Time:</strong> @Model.DepartureTime</p>
        <p><strong>Arrival Time:</strong> @Model.ArrivalTime</p>
        <p><strong>Price:</strong> @Model.Price</p>
    </div>
</div>

<div>
    <form asp-area="TravelManagement" asp-controller="Booking" asp-action="PostBookFlight" method="post">
        <input type="hidden" name="id" value="@Model.FlightId" />
        <button type="submit" class="btn btn-secondary">Book Flight</button>
        <a asp-controller="Flight" asp-action="Index" class="btn btn-warning">Back to Flights</a>
    </form>
</div>
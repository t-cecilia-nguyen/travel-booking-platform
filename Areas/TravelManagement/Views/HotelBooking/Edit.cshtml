@model HotelBooking

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>HotelBooking</h4>
<hr />
@if (Model != null)
{
    <div class="row" class="white-opaque">
        <div class="col-md-4">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                

                <div class="form-group">
                    <label asp-for="NumOfRoomsToBook" class="control-label"></label>
                    <input asp-for="NumOfRoomsToBook" type="number" class="form-control" />
                    <span asp-validation-for="NumOfRoomsToBook" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CheckInDate" class="control-label"></label>
                    <input asp-for="CheckInDate" class="form-control" />
                    <span asp-validation-for="CheckInDate" class="text-danger"></span>
                </div>
                
               <div class="form-group">
                    <label asp-for="CheckOutDate" class="control-label"></label>
                    <input asp-for="CheckOutDate" class="form-control" />
                    <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                </div>
                @Html.HiddenFor(model => model.HotelId)
                @Html.HiddenFor(model => model.HotelBookingId)
                @Html.HiddenFor(model => model.UserId)

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-secondary" />
                    <a asp-action="Index" class="btn btn-warning">Cancel</a>
                </div>
            </form>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model GBC_Travel_Group_90.Models.HotelBooking

@{
    ViewData["Title"] = "Details";
}



<div class="container mt-5">
    <div class="white-opaque">
        <h2 class="mb-3">Congratulations! Your Hotel has been successfully booked.</h2>
        <h2 class="mb-3">Please see below for details.</h2>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            User Details
        </div>
        <div class="card-body">
            <p><strong>Email:</strong> @Html.DisplayFor(model => model.User.Email)</p>
            <p><strong>First Name:</strong> @Html.DisplayFor(model => model.User.FirstName)</p>
            <p><strong>Last Name:</strong> @Html.DisplayFor(model => model.User.LastName)</p>
        </div>
    </div>


    <div class="card">
        <div class="card-header">
            Flight Details
        </div>
        <div class="card-body">
             @if(Model != null){
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.HotelBookingId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.HotelBookingId)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.BookingDate)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.BookingDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NumOfRoomsToBook)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NumOfRoomsToBook)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.CheckInDate)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.CheckInDate)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.CheckOutDate)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.CheckOutDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hotel.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hotel.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hotel.Location)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hotel.Location)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hotel.StarRate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hotel.StarRate)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hotel.Price)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hotel.Price)
                    </dd>
                </dl>
            }
        </div>
    </div>
</div>

<div>
    @if (ViewBag.IsAdmin)
    {
        <a asp-action="Edit" asp-route-isAdmin="true" asp-route-id="@Model?.HotelBookingId">Edit</a>
        <a asp-controller="Hotel" asp-route-isAdmin="true" asp-action="Index">Back to Hotel Listing</a>
    } else
    {
        <a asp-controller="Hotel" asp-action="Index" >Back to Hotel Listing</a>
    }
</div>

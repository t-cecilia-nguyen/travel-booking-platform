@model GBC_Travel_Group_90.Models.CarRental

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-header">
        <h3>Are you sure you want to delete this car rental?</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.RentalCompany)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.RentalCompany)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.PickUpLocation)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.PickUpLocation)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.PickUpDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.PickUpDate)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DropOffDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DropOffDate)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CarModel)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CarModel)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>
    
        <form asp-action="DeleteConfirmed">
            <input type="hidden" asp-for="CarRentalId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-warning">Cancel</a>
        </form>
    </div>
</div>
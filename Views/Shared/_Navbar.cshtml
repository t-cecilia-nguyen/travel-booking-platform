@using GBC_Travel_Group_90.Areas.TravelManagement.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light main_nav border-bottom box-shadow mb-3">
    <div class="container-fluid d-flex flex-column align-items-start">
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between w-100">
            <ul class="navbar-nav flex-grow-1 d-flex justify-content-start">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/banh_bao.png" /> Travel90 Agency</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a>
                </li>         

                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" id="navBarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Admin
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navBarDropdown" style="margin-top: 20px; background-color: pink;">
                            <a class="dropdown-item" asp-area="TravelManagement" asp-controller="AllBookings" asp-action="Index">View All Bookings</a>
                            <a class="dropdown-item" asp-area="/" asp-controller="/RoleManager">Role Manager</a>
                            <a class="dropdown-item" asp-area="/" asp-controller="/UserRoles">User Roles</a>
                        </div>
                    </li>
                }

                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="TravelManagement" asp-controller="ApplicationUser" asp-action="Index"><i class="fa-solid fa-circle-info"></i> Your Summary</a>
                    </li>
                }

                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="TravelManagement" asp-controller="Flight" asp-action="Index"><i class="fa-solid fa-plane"></i> Flights</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="TravelManagement" asp-controller="CarRental" asp-action="Index"><i class="fa-solid fa-car"></i> Cars</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="TravelManagement" asp-controller="Hotel" asp-action="Index"><i class="fa-solid fa-hotel"></i> Hotels</a>
                </li>

                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage your account">
                            <i class="fa fa-user-circle"></i> Profile</a>
                    </li>

                    <li class="nav-item">
                        <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                            <button type="submit" class="nav-link btn btn-link text-dark" style="cursor:pointer">Logout</button>
                            </form>
                    </li>
                } else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                            <i class="fa fa-sign-in-alt"></i> Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
                            <i class="fa fa-user-plus"></i> Register</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav> 
@model List<Flight>
@{
	ViewData["Title"] = "Flights";
}

<h2>Flights</h2>

<a class="btn btn-primary" asp-area="" asp-controller="Flight" asp-action="Create">Create New Flight</a>

@if (Model.Any())
{
	<table class="table">
		<thead>
			<tr>
				<td>Flight Number</td>
				<td>Airline</td>
				<td>Origin</td>
				<td>Destination</td>
				<td>Departure</td>
				<td>Arrival</td>
				<td>Price</td>
				<td>Actions</td>
			</tr>
		</thead>
		<tbody>
			@foreach (var flight in Model)
			{
				<tr>
					<td>@flight.FlightNumber</td>
					<td>@flight.Airline</td>
					<td>@flight.Origin</td>
					<td>@flight.Destination</td>
					<td>@flight.DepartureTime</td>
					<td>@flight.ArrivalTime</td>
					<td>@flight.Price</td>
					<td>
						<a asp-action="Details" asp-route-id="@flight.FlightId" class="btn btn-info">Details</a>
						<a asp-action="Edit" asp-route-id="@flight.FlightId" class="btn btn-secondary">Edit</a>
						<a asp-action="Delete" asp-route-id="@flight.FlightId" class="btn btn-danger">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<p>No flights available.</p>
}
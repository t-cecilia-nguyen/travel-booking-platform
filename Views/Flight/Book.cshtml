@model GBC_Travel_Group_90.Models.Flight

<h2>Book Flight</h2>

<div>
    <h3>Flight Details</h3>
    <p>@Model.FlightNumber</p>
    <p>@Model.Airline</p>
    <p>@Model.Origin</p>
    <p>@Model.Destination</p>
    <p>@Model.DepartureTime</p>
    <p>@Model.ArrivalTime</p>
    <p>@Model.Price</p>
</div>

<div>
    <h3>Enter Your Email Address</h3>
    <form method="post" asp-action="Book">
        <input type="hidden" name="id" value="@Model.FlightId" />
        <label for="userEmail">Email:</label>
        <input type="email" id="userEmail" name="userEmail" required />
        @Html.AntiForgeryToken()
        <button type="submit">Book Flight</button>
    </form>
</div>
@model GBC_Travel_Group_90.Models.Flight

@{
    ViewData["Title"] = "Delete";
}

<div class="white-opaque">
    <h3>Are you sure you want to delete this flight?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.FlightNumber)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.FlightNumber)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Airline)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Airline)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Origin)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Origin)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Destination)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Destination)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DepartureTime)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DepartureTime)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ArrivalTime)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ArrivalTime)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaxPassengers)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaxPassengers)
            </dd>
        </dl>
    
        <form asp-action="DeleteConfirmed" asp-route-id="@Model.FlightId" method="post">
            @Html.HiddenFor(model => model.FlightId)
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-warning">Cancel</a>
        </form>
    </div>
</div>

@model GBC_Travel_Group_90.Models.Flight

<div class="card">
    <div class="card-header">
        Book Flight
    </div>
    <div class="card-body">
        <p><strong>Flight Number:</strong> @Model.FlightNumber</p>
        <p><strong>Airline:</strong> @Model.Airline</p>
        <p><strong>Origin:</strong> @Model.Origin</p>
        <p><strong>Destination:</strong> @Model.Destination</p>
        <p><strong>Departure Time:</strong> @Model.DepartureTime</p>
        <p><strong>Arrival Time:</strong> @Model.ArrivalTime</p>
        <p><strong>Price:</strong> @Model.Price</p>
    </div>
</div>

<div class="white-opaque">
    <h3>Enter Your Email Address</h3>
    <form asp-controller="Booking" asp-action="BookFlight" method="post">
        <div class="form-group">
            <input type="hidden" name="flightId" value="@Model?.FlightId" />
            <label for="email">Enter your email address:</label>
            <input name="email" type="email" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-success">Book Flight</button>
        <a asp-controller="Flight" asp-action="Index" class="btn btn-secondary">Back to Flights</a>
    </form>
</div>